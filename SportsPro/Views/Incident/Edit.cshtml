@model Incident

@{
    string title = ViewBag.Action + " Incident";
    ViewData["Title"] = title;

}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CustomerID" class="form-label">Customer</label>
        <select asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName"))" class="form-select">
            <option disabled selected>Select a customer...</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="ProductID" class="form-label">Product</label>
        <select asp-for="ProductID" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))" class="form-select">
            <option disabled selected>Select a product...</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="TechnicianID" class="form-label">Technician</label>
        <select asp-for="TechnicianID" asp-items="@(new SelectList(ViewBag.Technicians, "TechnicianID", "Name"))" class="form-select">
            <option disabled selected>Select a technician...</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="DateOpened" class="form-label">Date Opened</label>
        <input asp-for="DateOpened" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="DateClosed" class="form-label">Date Closed</label>
        <input asp-for="DateClosed" class="form-control">
    </div>

    <input type="hidden" asp-for="IncidentID">

    <button type="submit" class="btn btn-primary">  Save  </button>
    <a asp-controller="Incident" asp-action="List" class="btn btn-primary">Cancel</a>

</form>
