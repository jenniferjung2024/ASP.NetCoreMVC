@model List<Incident>

@{
    ViewData["Title"] = "Incident Manager";
}

<h1>@ViewBag.Title</h1>


<nav class="nav nav-pills">
    <a class="nav-item nav-link" href="/">All incidents</a>
    <a class="nav-item nav-link" href="/unassigned">Unassigned incidents</a>
    <a class="nav-item nav-link active" href="/open">Open incidents</a>
</nav>

<p> </p>
<p> </p>
<p> </p>
<p> </p>
<p> </p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th>Date Closed</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incident in Model)
        {
            <tr>
                <td>@incident.Title</td>
                <td>@incident.Customer.FullName</td>
                <td>@incident.Product.Name</td>
                <td>@incident.DateOpened.Value.ToString("MM/dd/yyyy")</td>
                <td>@incident.DateClosed</td>
                <td>
                    <a asp-controller="Incident" asp-action="Edit" asp-route-id="@incident.IncidentID" button type="submit" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Incident" asp-action="Delete" asp-route-id="@incident.IncidentID" button type="submit" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }


    </tbody>

</table>



<div class="mb-2">
    <a asp-controller="Incident" asp-action="Add" button type="submit" class="btn btn-primary">Add Incident</a>
</div>
