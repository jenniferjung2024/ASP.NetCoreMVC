@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h1>Register</h1>

<div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post" asp-action="Register" asp-controller="Account">

    <div class="row mb-3">

        <label asp-for="Username" class="col-form-label col-md-2"></label>

        <div class="col-md-4">
            <input asp-for="Username" class="form-control" />
        </div>

        <div class="col">
            <span asp-asp-validation-for="Username" class="text-danger"></span>
        </div>

    </div>


    <div class="row mb-3">

        <label asp-for="Password" class="col-form-label col-md-2"></label>

        <div class="col-md-4">
            <input type="password" asp-for="Password" class="form-control" />
        </div>

        <div class="col">
            <span asp-asp-validation-for="Password" class="text-danger"></span>
        </div>

    </div>



    <div class="row mb-3">

        <label asp-for="ConfirmPassword" class="col-form-label col-md-2"></label>

        <div class="col-md-4">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>

        <div class="col">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

    </div>


    <div class="row mb-3">
        
        <div class="offset-md-2 col-md-4">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>

    </div>



    <div class="row">
        
        <div class="offset-md-2 col-md-4">
            Already registered? <a asp-action="LogIn">Log In</a>
        </div>

    </div>


</form>