@model Product

@{
    string title = ViewBag.Action + " Product";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label">Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="YearlyPrice" class="form-label">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="ReleaseDate" class="form-label">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control">
    </div>

    <input type="hidden" asp-for="ProductID">

    <button type="submit" class="btn btn-primary">  Save  </button>
    <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>

</form>
