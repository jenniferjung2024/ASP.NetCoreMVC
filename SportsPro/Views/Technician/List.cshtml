@model List<Technician>

@{
    ViewData["Title"] = "Technician Manager";
}

<h1>Technician Manager</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var technician in Model) {
            if (@technician.TechnicianID >= 0) {
                {
                <tr>
                    <td>@technician.Name</td>
                    <td>@technician.Email</td>
                    <td>@technician.Phone</td>
                    <td>
                        <a asp-controller="Technician" asp-action="Edit" asp-route-id="@technician.TechnicianID" button type="submit" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Technician" asp-action="Delete" asp-route-id="@technician.TechnicianID" button type="submit" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
                }
            }
        }

        </tbody>

</table>



<div class="mb-2">
    <a asp-controller="Technician" asp-action="Add" button type="submit" class="btn btn-primary">Add Technician</a>
</div>
